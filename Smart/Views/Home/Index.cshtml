@{
    ViewData["Title"] = "Search Address";
}
<style>
    /* Style for the dropdown menu */
    .dropdown-menu {
        max-height: 200px;
        overflow-y: auto;
        position: absolute;
        width: 100%;
        z-index: 1000;
        display: none;
        background-color: lightblue;
        color: black;
    }

        .dropdown-menu li {
            padding: 5px;
        }

            .dropdown-menu li:hover {
                background-color: #f8f9fa;
                cursor: pointer;
            }
        /* Remove underline from anchor */
        .dropdown-menu a {
            color: black;
            text-decoration: none;
        }
    /* Style for the loading spinner */
    #loadingSpinner {
        margin-left: -32px;
        z-index: 1001;
        position: relative;
    }
</style>
<h2>Search Address</h2>

<div class="form-group">
    <label for="StreetAddress">Street Address</label>
    <div class="input-group">
        <input type="text" id="StreetAddress" class="form-control" />
        <div class="input-group-append">
            <div class="spinner-border" role="status" id="loadingSpinner" style="display: none;">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    </div>
</div>

<div class="form-group">
    <label for="City">City</label>
    <input type="text" id="City" class="form-control" />
</div>

<div class="form-group">
    <label for="State">State</label>
    <input type="text" id="State" class="form-control" />
</div>

<div id="searchResults" class="dropdown">
    <ul class="dropdown-menu"></ul>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js"></script>
}
